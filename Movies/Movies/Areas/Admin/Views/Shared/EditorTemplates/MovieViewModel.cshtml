@model Movies.Web.ViewModels.Admin.MovieViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm<PanelController>(c => c.AddMovie(null), FormMethod.Post, null, new { id = "add-data-form" }))
{
    <span class="alert-danger">
        @Html.ValidationSummary()
    </span>

    <div class="form-group">
        <label>
            @Html.LabelFor(m => m.Name)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-film"></i>
            </span>
            @Html.EditorFor(m => m.Name,
                new { htmlAttributes = new { @class = "form-control", placeholder = "movie name", required = true }})
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(m => m.Year)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-calendar-times-o" aria-hidden="true"></i>
            </span>
            @Html.EditorFor(m => m.Year,
                new { htmlAttributes = new { @class = "form-control", placeholder = "movie year", required = true }})
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(m => m.RunningTime)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-time"></i>
            </span>
            @Html.EditorFor(m => m.RunningTime, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               type = "number",
               min = GlobalConstants.MinMovieRunningTime,
               max = GlobalConstants.MaxMovieRunningTime,
               placeholder = "movie running time",
               required = true
           }
       })
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(m => m.Description)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-pencil-square" aria-hidden="true"></i>
            </span>
            @Html.EditorFor(m => m.Description, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               required = true
           }
       })
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(m => m.GenreName)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-film"></i>
            </span>
            @Html.DropDownListFor(m => m.GenreName, Model.GenresSelectList,
                new { htmlAttributes = new { @class = "form-control", required = true }})
        </div>
    </div>

    @Html.AntiForgeryToken()
}
