@using Movies.Web.Areas.Admin.Models
@model MovieViewModel

@using (Html.BeginForm<PanelController>(c => c.AddMovie(null), FormMethod.Post, null, new { id = "add-data-form" }))
{
    <div class="form-group">
        <label>
            Movie Name
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-film"></i>
            </span>
            @Html.EditorFor(m => m.Name,
                new { htmlAttributes = new { @class = "form-control", placeholder = "Name", required = true }})
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

    <div class="form-group">
        <label>
            Movie Year
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-flash"></i>
            </span>
            @Html.EditorFor(m => m.Year,
                new { htmlAttributes = new { @class = "form-control", placeholder = "Year", required = true }})
            @Html.ValidationMessageFor(m => m.Year)
        </div>
    </div>

    <div class="form-group">
        <label>
            Movie Running Time
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-time"></i>
            </span>
            @Html.EditorFor(m => m.RunningTime,
                new { htmlAttributes = new { @class = "form-control", placeholder = "Running Time", required = true }})
            @Html.ValidationMessageFor(m => m.RunningTime)
        </div>
    </div>

    <div class="form-group">
        <label>
            Movie Description
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-pencil"></i>
            </span>
            @Html.EditorFor(m => m.Description,
                new { htmlAttributes = new { @class = "form-control", placeholder = "Description", required = true }})
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>

    <div class="form-group">
        <label>
            Movie Rating
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-star"></i>
            </span>
            @Html.EditorFor(m => m.Rating,
                new { htmlAttributes = new { @class = "form-control", placeholder = "Rating", required = true }})
            @Html.ValidationMessageFor(m => m.Rating)
        </div>
    </div>

    <div class="form-group">
        <label>
            Genre
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-film"></i>
            </span>
            @Html.DropDownListFor(m => m.GenreName, Model.GenresSelectList, 
                new { htmlAttributes = new { @class = "form-control", placeholder = "Genre", required = true }})
            @Html.ValidationMessageFor(m => m.GenreName)
        </div>
    </div>

    @Html.AntiForgeryToken()
}
