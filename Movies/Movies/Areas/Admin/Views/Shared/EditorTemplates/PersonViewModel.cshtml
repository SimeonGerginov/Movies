@using Movies.ViewModels.AdminViewModels
@model PersonViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm<PanelController>(c => c.AddPerson(null), FormMethod.Post, null, new { enctype = "multipart/form-data", id = "add-data-form" }))
{
    <span class="alert-danger">
        @Html.ValidationSummary()
    </span>

    <div class="form-group">
        <label>
            @Html.LabelFor(p => p.FirstName)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-user-circle" aria-hidden="true"></i>
            </span>
            @Html.EditorFor(p => p.FirstName,
                new { htmlAttributes = new { @class = "form-control", placeholder = "first name of person", required = true }})
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(p => p.LastName)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-user-circle" aria-hidden="true"></i>
            </span>
            @Html.EditorFor(p => p.LastName,
                new { htmlAttributes = new { @class = "form-control", placeholder = "last name of person", required = true }})
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(p => p.Nationality)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-flag"></i>
            </span>
            @Html.EditorFor(p => p.Nationality,
                new { htmlAttributes = new { @class = "form-control", placeholder = "nationality", required = true }})
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(p => p.Gender)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-venus" aria-hidden="true"></i>
            </span>
            @Html.EnumDropDownListFor(p => p.Gender, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(p => p.DateOfBirth)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-calendar" aria-hidden="true"></i>
            </span>
            @Html.Kendo().DatePickerFor(p => p.DateOfBirth)
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(p => p.Picture)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-picture"></i>
            </span>
            <input type="file" name="Picture" />
        </div>
    </div>

    @Html.AntiForgeryToken()
}
