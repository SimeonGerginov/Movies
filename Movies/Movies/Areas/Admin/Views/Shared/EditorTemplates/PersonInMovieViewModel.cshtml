@using Movies.ViewModels.AdminViewModels
@model PersonInMovieViewModel

@using (Html.BeginForm<PanelController>(c => c.AddPersonToMovie(null), FormMethod.Post, null, new { id = "add-data-form" }))
{
    <div class="form-group">
        <label>
            @Html.LabelFor(pm => pm.PersonId)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-user-circle" aria-hidden="true"></i>
            </span>
            @Html.DropDownListFor(pm => pm.PersonId, Model.People,
                new { htmlAttributes = new { @class = "form-control", required = true }})
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(pm => pm.Role)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-film"></i>
            </span>
            @Html.EnumDropDownListFor(pm => pm.Role,
                new { htmlAttributes = new { @class = "form-control", required = true }})
        </div>
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(pm => pm.MovieId)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-film"></i>
            </span>
            @Html.DropDownListFor(pm => pm.MovieId, Model.Movies,
                new { htmlAttributes = new { @class = "form-control", required = true }})
        </div>
    </div>

    @Html.AntiForgeryToken()
}