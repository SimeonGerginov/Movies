@model Movies.Web.ViewModels.Admin.AddGenreViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm<PanelController>(c => c.AddGenre(null), FormMethod.Post, null, new { id = "add-data-form" }))
{
    <span class="alert-warning text-warning">
        @Html.ValidationSummary()
    </span>

    <div class="form-group">
        <label>
            @Html.LabelFor(g => g.Name)
        </label>

        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-film"></i>
            </span>
            @Html.EditorFor(g => g.Name,
                new { htmlAttributes = new { @class = "form-control", placeholder = "Genre name", required = true }})
        </div>
    </div>

    @Html.AntiForgeryToken()
}
